APPOINTMENTS_USE_INMEMORY=true
AUTH_BYPASS=true
AUTH_BYPASS_USER_ID=dev-patient-1
AUTH_BYPASS_USER_ROLE=PATIENT

# Database


DATABASE_URL="postgresql://user:password@localhost:5432/melkam_psychotherapy?schema=public"

# Server
NODE_ENV="development"
PORT=3000

# JWT Secrets
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Email Configuration (SMTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@melkampsychotherapy.com"

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:3001"

# Cookie Settings
COOKIE_DOMAIN="localhost"
COOKIE_SECURE="false"

# Chapa Payment Gateway
CHAPA_SECRET_KEY="your-chapa-secret-key"
CHAPA_WEBHOOK_URL="http://localhost:3000/api/v1/webhooks/chapa"

# Google Meet API (Optional - for auto-link generation)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
